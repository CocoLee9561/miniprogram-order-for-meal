/* pages/menu/menu.wxss */
.page-menu{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #eee;
}
image{
  width: 100%;
}
.swiper-item {
  width: 100%;
  height: 100%;
}
.demo-text-1{
  background-color: pink;
}
.demo-text-2{
  background-color: green;
}
.demo-text-3{
  background-color: yellow;
}
.menu-container{
  display: flex;
}
.menu-item{
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-bottom: 1px solid #ddd;
}
.scroll-left-list{
  width: 25%;
}
.scroll-food-list{
  width: 75%;
}
.food-item{
  margin: 10px;
  background-color: white;
  border-radius: 5px;
}

.good-bought{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 10px;
}

